rules_version = '2';

// Regras de segurança do Firestore para o Portal de Jogos SENAI
// Cole essas regras no console do Firebase > Firestore > Regras
// 
// ⚠️ IMPORTANTE: Essas regras permitem leitura/escrita para qualquer um.
// Para produção com mais segurança, considere implementar Firebase Auth.

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Jogos: Leitura e escrita públicas (admin é controlado no frontend)
    match /games/{gameId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Alunos: Leitura e escrita públicas (admin é controlado no frontend)
    match /students/{studentId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Cohorts (Turmas): Leitura e escrita públicas
    match /cohorts/{cohortId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
